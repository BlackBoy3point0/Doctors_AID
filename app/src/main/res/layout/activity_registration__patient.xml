<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".Registration_Patient">

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/first_name_patient"
            android:hint="First name"
            android:paddingLeft="8dp"
            android:textColor="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/last_name_patient"
            android:hint="Last Name"
            android:paddingLeft="8dp"
            android:textColor="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/date_of_birth"
            android:hint="Date of Birth"
            android:paddingLeft="8dp"
            android:inputType="date"
            android:textColor="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/phone_no"
            android:hint="Phone number"
            android:paddingLeft="8dp"
            android:inputType="number"
            android:textColor="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/location"
            android:hint="Home Address"
            android:paddingLeft="8dp"
            android:inputType="textPostalAddress"
            android:textColor="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/patient_email_address"
            android:hint="Email Address"
            android:paddingLeft="8dp"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/patient_password"
            android:hint="Password"
            android:paddingLeft="8dp"
            android:inputType="textPassword"
            android:textColor="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/patient_pass_confirm"
            android:hint="Confirm Password"
            android:paddingLeft="8dp"
            android:inputType="textPassword"
            android:textColor="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/patient_create_account"
            android:text="Create Account"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>