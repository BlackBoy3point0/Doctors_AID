<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.killmongerscode.aid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AiD">
        <activity android:name=".DoctorsList"></activity>
        <activity
            android:name=".DoctorTabbed"
            android:label="@string/title_activity_doctor_tabbed"
            android:theme="@style/Theme.AiD.NoActionBar" />
        <activity
            android:name=".TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/Theme.AiD.NoActionBar" />
        <activity android:name=".Appointment_detail" />
        <activity android:name=".pending_bookings" />
        <activity android:name=".Patient_appointments" />
        <activity android:name=".Doctor_appointments" />
        <activity android:name=".list_of_patients" />
        <activity android:name=".PatientProfile" />
        <activity android:name=".PatientMedicalFolder" />
        <activity android:name=".DoctorAccess" />
        <activity android:name=".DoctorChats" />
        <activity android:name=".DoctorProfile" />
        <activity android:name=".Booking_System" />
        <activity android:name=".Booking_Patient" />
        <activity android:name=".Patient_Homepage" />
        <activity android:name=".Doctor_Homepage" />
        <activity android:name=".Registration_Doctor" />
        <activity android:name=".Registration_Patient" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PatientDetail" />

        <service
            android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>